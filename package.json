{
  "author": "Jason G. Williscroft",
  "bugs": {
    "url": "https://github.com/karmaniverous/serify-deserify/issues"
  },
  "dependencies": {
    "is-what": "^4.1.16",
    "tslog": "^4.9.2"
  },
  "description": "Reversibly transform unserializable values into serializable ones. Includes Redux middleware.",
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@reduxjs/toolkit": "^2.2.3",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chai": "^4.3.14",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-mocha": "^10.4.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "auto-changelog": "^2.4.0",
    "chai": "^5.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-mocha": "^10.4.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "jsdom-global": "^3.0.2",
    "lefthook": "^1.6.10",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "release-it": "^17.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.16.4",
    "rollup-plugin-dts": "^6.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1"
  },
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.mjs",
        "types": "./dist/index.d.mts"
      },
      "require": {
        "default": "./dist/index.cjs",
        "types": "./dist/index.d.cts"
      }
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/karmaniverous/serify-deserify#readme",
  "keywords": [
    "bigint",
    "deserialize",
    "date",
    "json",
    "map",
    "parse",
    "redux",
    "serialize",
    "serializable",
    "set",
    "state",
    "stringify",
    "typescript"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "name": "@karmaniverous/serify-deserify",
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs",
      "commitMessage": "chore: release v${version}",
      "requireBranch": "main"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:init": [
        "npm run lint",
        "npm run test",
        "npm run build"
      ],
      "after:release": [
        "git switch -c release/${version}",
        "git push -u origin release/${version}",
        "git switch main"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karmaniverous/serify-deserify.git"
  },
  "scripts": {
    "build": "rimraf dist && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "lint": "eslint src/** && prettier -c src",
    "lint:fix": "eslint --fix src/** && prettier --write src",
    "release": "release-it",
    "test": "cross-env LOG_LEVEL=debug nyc mocha"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "2.0.0"
}
